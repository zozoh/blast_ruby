<%= simple_form_for @token, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :token %>
  <%= f.input :type %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tokens_path, :class => 'btn' %>
  </div>
<% end %>
