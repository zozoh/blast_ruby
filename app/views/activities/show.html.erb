<%- model_class = Activity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @activity.name %></dd>
</dl>
<ul>
  <%= @users.each do |u| %>
    <li><%= u.name %></li>
  <% end %>
</ul>
<div>
<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.simple_fields_for @activity do |p| %>
    <%= p.input :id, as: :hidden %>
  <% end %>
  <%= f.text_field :name, :class => 'text_field' %>
  <%= f.input :option, as: :radio_buttons, :collection => [[@activity.option1, '1'], [@activity.option2, '2'], [@activity.option3, '3']] %>
  <%= f.submit nil, :class => 'btn btn-success' %>
<% end %>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              activities_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_activity_path(@activity), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              activity_path(@activity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
