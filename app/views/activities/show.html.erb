<%- model_class = Activity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @activity.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= link_to @activity.url, @activity.url %></dd>
</dl>
<div>
<%= simple_form_for @activity, :html => { :class => 'form-horizontal' }, :url => save_activity_path(@activity) do |f| %>
  <%= f.simple_fields_for :user do |u| %>
    <%= u.input :name %>
  <% end %>
  <%= f.input :options, :collection => @activity.options.map{ |c| [c.option, c.id] } , :as => :radio_buttons %>
  <%= f.submit nil, :class => 'btn btn-success' %>
<% end %>
</div>

<table class="table table-bordered">
  <% @activity.options.each do |o| %>
    <tr>
      <td><%= o.option %></td>
      <td>
        <table>
            <% o.users.each do |u| %>
              <tr>
                <td><%= u.name %></td>
              </tr>
            <% end %> 
        </table>
      </td>
    </tr>
  <% end %>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              activities_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_activity_path(@activity), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              activity_path(@activity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
